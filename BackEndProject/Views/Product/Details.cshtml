@model BackEndProject.Models.Product
@{
    var reviews = ViewBag.Reviews as IEnumerable<BackEndProject.Models.Review>;
    ViewData["Title"] = Model?.Name ?? "Product Details";
}

<div class="container product-details">
    <div class="row">
        <div class="col-md-6">
            <img src="@(Model.ImageUrl ?? "/images/default-product.png")" class="img-fluid" alt="@Model.Name" />
        </div>

        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p class="text-muted">@Model.Description</p>
            <h3 class="text-danger">@Model.Price.ToString("C")</h3>

            <form asp-controller="Cart" asp-action="Add" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="mb-2">
                    <label>Quantity</label>
                    <input type="number" name="quantity" value="1" min="1" class="form-control w-25" />
                </div>
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>

            <hr />

            <h4>Share</h4>
            <div>
                <a class="btn btn-outline-secondary btn-sm" href="#">Facebook</a>
                <a class="btn btn-outline-secondary btn-sm" href="#">Twitter</a>
            </div>
        </div>
    </div>

    <hr />

    <div class="row mt-4">
        <div class="col-md-8">
            <h3>Reviews (@(reviews?.Count() ?? 0))</h3>

            @if (reviews != null && reviews.Any())
            {
                <ul class="list-unstyled">
                    @foreach (var r in reviews)
                    {
                        <li class="media mb-3">
                            <div class="media-body">
                                <h5 class="mt-0 mb-1">@r.AuthorId <small class="text-muted">- @r.Rating/5</small></h5>
                                <p>@r.Content</p>
                                <small class="text-muted">@r.CreatedAt.ToLocalTime().ToString("g")</small>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No reviews yet.</p>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <h5 class="mt-4">Leave a review</h5>
                <form asp-action="AddReview" method="post" class="mb-5">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="content">Review</label>
                        <textarea id="content" name="content" class="form-control" rows="4" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="rating">Rating</label>
                        <select id="rating" name="rating" class="form-control w-25">
                            <option value="5">5</option>
                            <option value="4">4</option>
                            <option value="3">3</option>
                            <option value="2">2</option>
                            <option value="1">1</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success">Add Review</button>
                </form>
            }
            else
            {
                <p>Please <a asp-controller="Account" asp-action="Login">login</a> to leave a review.</p>
            }
        </div>
    </div>
</div>